# Example Terraform variables for production environment
# Copy this file to terraform.tfvars and update the values

# Admin email for alerts and notifications
admin_email = "admin@yourcompany.com"

# Container configuration
container_image = "your-acr-name.azurecr.io/your-app:latest"
min_replicas    = 2
max_replicas    = 10
cpu_cores       = 0.5
memory_size     = "1Gi"

# Database connection string (if using a database)
# database_connection_string = "Server=your-db-server;Database=your-db;User Id=your-user;Password=your-password;"

# Monitoring thresholds (higher for production)
http_5xx_threshold  = 10
restart_threshold   = 5
error_log_threshold = 20